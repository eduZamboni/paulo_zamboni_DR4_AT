@page
@model AgenciaTurismo.Pages.PacotesTuristicosModel
@{
    ViewData["Title"] = "Pacotes Turísticos";
}

<h2>Pacotes Turísticos</h2>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Criar Novo Pacote Turístico</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="NovoPacote.Titulo" class="form-label">Título</label>
                        <input asp-for="NovoPacote.Titulo" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NovoPacote.CapacidadeMaxima" class="form-label">Capacidade Máxima</label>
                        <input asp-for="NovoPacote.CapacidadeMaxima" class="form-control" type="number" min="1" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Criar Pacote</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.Pacotes.Any())
{
    <h3>Pacotes Disponíveis</h3>
    <div class="row">
        @foreach (var pacote in Model.Pacotes)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header">
                        <h5>@pacote.Titulo</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Capacidade:</strong> @pacote.CapacidadeRestante de @pacote.CapacidadeMaxima vagas disponíveis</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Nenhum pacote turístico cadastrado.</p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}