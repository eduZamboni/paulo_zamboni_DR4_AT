@page
@model AgenciaTurismo.Pages.DescontoModel
@{
    ViewData["Title"] = "Calcular Desconto";
}

<h2>Calcular Desconto</h2>

<form method="post">
    <label for="preco">Digite o preço:</label>
    <input type="number" step="0.01" asp-for="PrecoOriginal" />
    <button type="submit">Calcular</button>
</form>

@if (Model.PrecoComDesconto != null)
{
    <p>Preço com 10% de desconto: <strong>@Model.PrecoComDesconto.Value.ToString("C")</strong></p>
}