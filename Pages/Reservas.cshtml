@page
@model AgenciaTurismo.Pages.ReservasModel
@{
    ViewData["Title"] = "Reservas";
}

<h2>Realizar Reserva</h2>

<form method="post">
    <label for="NumeroDeDiarias">Número de diárias:</label>
    <input type="number" asp-for="NumeroDeDiarias" />

    <label for="preco">Digite o preço da diária:</label>
    <input type="number" step="0.01" asp-for="PrecoOriginal" />

    <button type="submit">Realizar Reserva</button>
</form>

@if (Model.PrecoComDesconto != null)
{
    <p>Preço com 10% de desconto: <strong>@Model.PrecoComDesconto.Value.ToString("C")</strong></p>
}

@if (Model.LogsEmMemoria.Any())
{
    <h3>Logs em memória:</h3>
    <ul>
        @foreach (var log in Model.LogsEmMemoria)
        {
            <li>@log</li>
        }
    </ul>
}